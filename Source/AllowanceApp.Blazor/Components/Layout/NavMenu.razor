@using AllowanceApp.Blazor.Models
@using AllowanceApp.Blazor.Services
@using Microsoft.AspNetCore.Components.Routing;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Kid Allowance Tracker 2.0</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex flex-col justify-between h-full">
        <div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                </NavLink>
            </div>
            @if (Accounts is not null && Accounts.Count > 0)
            {
                @foreach (var account in Accounts)
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="@($"/account-details/{account.ID}")">
                            <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> @account.Name
                        </NavLink>
                    </div>
                }
            }
        </div>

        <div>
            <div class="nav-item px-3 mt-4">
                <NavLink class="nav-link" href="/Weather">
                    <span class="bi bi-stars" aria-hidden="true"></span> How to earn points
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/settings">
                    <span class="bi bi-gear-fill" aria-hidden="true"></span> Settings
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/Error">
                    <span class="bi bi-info-circle-fill" aria-hidden="true"></span> About
                </NavLink>
            </div>
        </div>
    </nav>
</div>

@code {
    [Parameter] public List<NavBarModel> Accounts {get; set;} = [];
}