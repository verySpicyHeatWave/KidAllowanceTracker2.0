@code {
    [Parameter] public string Name { get; set; } = string.Empty;
    [Parameter] public int Worksheets { get; set; } = 0;
    [Parameter] public int Behavior { get; set; } = 0;
    [Parameter] public int Chores { get; set; } = 0;
    [Parameter] public int Balance { get; set; } = 0;    
    [Parameter] public EventCallback<string> OnIncrement { get; set; }

    private async Task Increment(string category)
    {
        if (OnIncrement.HasDelegate)
        {
            await OnIncrement.InvokeAsync(category);
        }
    }

    public string BalanceDisplay => $"{(Balance / 100).ToString("0.00")}";
}